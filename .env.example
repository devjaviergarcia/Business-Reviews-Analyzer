# App
APP_NAME=Business Reviews Analyzer
APP_ENV=dev
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# MongoDB
# Local app (uvicorn fuera de docker)
MONGO_URI=mongodb://localhost:27017
# Docker app (cuando corres el servicio app en compose)
MONGO_URI_DOCKER=mongodb://mongodb:27017
DB_NAME=business_reviews_analyzer

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Scraper / Playwright
SCRAPER_HEADLESS=false
SCRAPER_INCOGNITO=false
SCRAPER_SLOW_MO_MS=50
SCRAPER_USER_DATA_DIR=playwright-data
# Optional browser channel: msedge | chrome | chromium (empty = bundled chromium)
SCRAPER_BROWSER_CHANNEL=
SCRAPER_MAPS_URL=https://www.google.com/maps?hl=es
SCRAPER_TIMEOUT_MS=30000
SCRAPER_MIN_CLICK_DELAY_MS=3100
SCRAPER_MAX_CLICK_DELAY_MS=5200
SCRAPER_MIN_KEY_DELAY_MS=90
SCRAPER_MAX_KEY_DELAY_MS=260
SCRAPER_STEALTH_MODE=true
SCRAPER_HARDEN_HEADLESS=true
# Comma-separated list, for example:
# --disable-features=IsolateOrigins,site-per-process,--disable-setuid-sandbox
SCRAPER_EXTRA_CHROMIUM_ARGS=
SCRAPER_REVIEWS_STRATEGY=scroll_copy
SCRAPER_INTERACTIVE_MAX_ROUNDS=40
SCRAPER_HTML_SCROLL_MAX_ROUNDS=0
SCRAPER_HTML_STABLE_ROUNDS=10
SCRAPER_HTML_SCROLL_MIN_INTERVAL_S=1.0
SCRAPER_HTML_SCROLL_MAX_INTERVAL_S=2.0
ANALYSIS_REANALYZE_DEFAULT_BATCHERS=latest_text,balanced_rating,low_rating_focus,high_rating_focus
ANALYSIS_REANALYZE_BATCH_SIZE=30
ANALYSIS_REANALYZE_POOL_SIZE=250

# Docker/dev profile overrides
SCRAPER_HEADLESS_DOCKER=true
SCRAPER_INCOGNITO_DOCKER=false
SCRAPER_USER_DATA_DIR_DOCKER=playwright-data-docker
SCRAPER_USER_DATA_DIR_WORKER_DOCKER=playwright-data-worker-docker
SCRAPER_USE_XVFB_DOCKER=false
API_RELOAD_DOCKER=false
WORKER_POLL_SECONDS=5
