# App
APP_NAME=Business Reviews Analyzer
APP_ENV=dev
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# MongoDB
MONGO_URI=mongodb://mongodb:27017
DB_NAME=business_reviews_analyzer

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Scraper / Playwright
SCRAPER_HEADLESS=false
SCRAPER_SLOW_MO_MS=50
SCRAPER_USER_DATA_DIR=playwright-data
# Optional browser channel: msedge | chrome | chromium (empty = bundled chromium)
SCRAPER_BROWSER_CHANNEL=
SCRAPER_MAPS_URL=https://www.google.com/maps?hl=es
SCRAPER_TIMEOUT_MS=30000
SCRAPER_MIN_CLICK_DELAY_MS=3100
SCRAPER_MAX_CLICK_DELAY_MS=5200
SCRAPER_MIN_KEY_DELAY_MS=90
SCRAPER_MAX_KEY_DELAY_MS=260
SCRAPER_REVIEWS_STRATEGY=interactive
